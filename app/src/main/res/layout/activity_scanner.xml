<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Scanner">


    <LinearLayout
        android:visibility="visible"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:src="@drawable/scanner"
            />



        <TextView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/tvCodigoBarras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código de barras"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginBottom="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/tvTextoMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presiona &quot;ESCANEAR CÓDIGO&quot; para acceder a la cámara"
            android:textAlignment="center"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btScanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_ok"
            android:text="Escanear código" />
    </LinearLayout>


</FrameLayout>