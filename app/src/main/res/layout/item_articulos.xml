<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">











    <LinearLayout
        android:padding="5dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold|italic"
            android:id="@+id/tvNumeroDeDocumento"
            android:textSize="14dp"
            android:textColor="@color/purple_200"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_weight="9"
            android:text="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:alpha="0.2"
            android:background="@color/textos_general"
            android:layout_width="1dp"
            android:layout_height="fill_parent"/>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tvNombreArticulo"
                    android:textSize="14dp"
                    android:textColor="@color/textos_principal"
                    android:paddingStart="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Recibo del Agua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:background="@android:color/transparent"
                    android:id="@+id/btBorrarArticulo"
                    android:layout_weight="9"
                    android:src="@drawable/ic_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
                android:paddingTop="3dp"
                android:id="@+id/tvSerie"
                android:textSize="10sp"
                android:textColor="@color/textos_general"
                android:paddingStart="10dp"
                android:layout_gravity="center"
                android:text="Recibo del Agua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textAlignment="textEnd"
                android:id="@+id/tvFecha"
                android:textColor="@color/purple_200"
                android:textSize="12sp"
                android:text="---------------"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:alpha="0.2"
        android:background="@color/textos_general"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>