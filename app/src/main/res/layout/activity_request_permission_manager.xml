<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/slide_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_permision" />

    <TextView
        android:visibility="visible"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Conceder permisos"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <TextView
        android:visibility="visible"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/slide_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Necesitamos permisos de aplicaciÃ³n"
        android:textColor="@color/textos_general"
        android:textSize="14sp"/>


    <Button
        android:layout_gravity="center"
        android:id="@+id/btPermisos"
        android:padding="15dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Agregar permisos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>